{% extends "layout.html.twig" %}

{% block title 'Admin rubriques' %}

{% block content %}
    <h2>Edition rubrique</h2>
    
    <form method="post">
        <div class="form-group">
            <label>Nom</label>
            <input type="text" name="name" value="{{ category.name }}" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">
            Enregistrer
        </button>
        <a href="{{ path('admin_categories') }}" class="btn btn-default">
            Annuler
        </a>
    </form>
        
{% block content %}
    <h2>Edition article</h2>
    
    <form method="post">
        <div class="form-group">
            <label class="control-label">Titre</label>
            <input type="text" name="title" value="{{ article.title }}" class="form-control">
        </div>
        
        <div class="form-group">
            <label class="control-label">Contenu</label>
            <textarea name="content" class="form-control">{{ article.Content }}</textarea>
        </div>
        
        <div class="form-group">
            <label class="control-label">Chap√¥</label>
            <textarea name="short_content" class="form-control">{{ article.shortContent }}</textarea>
        </div>
        
        <button type="submit" class="btn btn-primary">
            Enregistrer
        </button>
        <a href="{{ path('admin_articles') }}" class="btn btn-default">
            Annuler
        </a>
    </form>
{% endblock %}